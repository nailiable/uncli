{
  "name": "@zero-template/monorepo",
  "scripts": {
    "format": "prettier --write ./",
    "lint": "eslint \"./**/*.ts\" --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "author": "Zero <gczgroup@qq.com>",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.8.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/types": "^17.4.4",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^20.10.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  }
}
